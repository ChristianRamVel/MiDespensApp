<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lista.ListaFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chbComprado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@string/comprado"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/producto"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textoStockMinimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:text="@string/cantidadParaComprar"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </LinearLayout>

    <ListView
        android:id="@+id/lvListaCompra"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintBottom_toTopOf="@id/btn_add_producto"
        />

    <Button
        android:id="@+id/btn_add_producto"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:text="@string/añadir"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_añadir_seleccionados_despensa"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:drawableRight="@drawable/pasaradespensa"
        android:gravity="center"
        android:text=""
        android:layout_marginStart="20dp"
        app:cornerRadius="40dp"
        app:layout_constraintTop_toTopOf="@id/btn_add_producto"
        app:layout_constraintBottom_toBottomOf="@id/btn_add_producto"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/btn_borrar_seleccionados"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:drawableRight="@drawable/cruz"
        android:gravity="center"
        android:text=""
        android:layout_marginStart="20dp"
        app:cornerRadius="40dp"
        app:layout_constraintTop_toTopOf="@id/btn_add_producto"
        app:layout_constraintBottom_toBottomOf="@id/btn_add_producto"
        app:layout_constraintStart_toEndOf="@id/btn_añadir_seleccionados_despensa"
        app:layout_constraintEnd_toStartOf="@id/btn_add_producto"

        />

</androidx.constraintlayout.widget.ConstraintLayout>