<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lista.ListaFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/chbComprado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comprado"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/nombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/producto"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cantidadParaComprar"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_weight="3.5"
            android:id="@+id/textoStockMinimo"
            />


    </LinearLayout>

    <ListView
        android:id="@+id/lvListaCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/linearLayout"

        />

    <Button
        android:id="@+id/btn_add_producto"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60dp"
        android:text="@string/aÃ±adir"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>